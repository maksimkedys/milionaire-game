{
    "name": "millionaire-game",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format": "prettier -w \"src/**/*.{js,jsx,ts,tsx,scss}\"",
        "test": "yarn lint && yarn type-check && yarn test:unit",
        "test:unit": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "type-check": "tsc --noEmit",
        "prepare": "husky install",
        "postinstall": "husky install"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "next": "16.1.6",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/classnames": "^2.3.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "babel-plugin-react-compiler": "1.0.0",
        "eslint": "^9",
        "eslint-config-next": "16.1.6",
        "husky": "^8.0.3",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^15.0.2",
        "prettier": "^2.8.8",
        "typescript": "^5"
    }
}
